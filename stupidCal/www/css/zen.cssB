    }
     .percent:hover{
            color: white;
            top : 4px;  
            background-color : #A493F7;
            box-shadow: 0px 0px #d3545d;
    }
        .keys span.operator{
            background: #FFF0F5;
            margin-right: 0;
        }

        .keys span.operator:hover{
            color: white;
            top : 4px;  
            background-color : #A493F7;
        }

        .keys span.eval{
            background : #f1ff92;
            box-shadow: 0px 4px #9da853;
            color: #888e5f;
        }

        .keys span.eval:hover{
             color: white;
            top : 4px;  
            background-color : #A493F7;
        }

/* Media Queries */

@media screen and (max-width: 480px) {

	header nav, #main, aside {
		float: left;
		clear: left;
		margin: 0 0 10px; 
		width: 100%;
		}	
		header nav li {
			margin: 0;
			background: #efefef;
			display: block;
			margin-bottom: 3px;
			}
			header nav a {
				display: block;
				padding: 10px;
				text-align: center;
				}			
}