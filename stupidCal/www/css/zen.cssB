/* Reset
------------------------------------------------------------ */
* { margin: 0; padding: 0; }
html { overflow-y: scroll;}
body { background:#ffffff; font-size: 13px; color: #666666; font-family: Arial, helvetica, sans-serif;}
ol, ul { list-style: none; margin: 0;}
ul li { margin: 0; padding: 0;}
h1 { margin-bottom: 10px; color: #111111;}	
a, img { outline: none; border:none; color: #000; font-weight: bold; text-transform: uppercase;}
p { margin: 0 0 10px; line-height: 1.4em; font-size: 1.2em;}
img { display: block; margin-bottom: 10px;}
aside { font-style: italic; font-size: 0.9em;}
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section { 
    display: block;
	}
	
/* Structure */
html{
/*    dinh nghia font size qua rem (root of em )*/
    font-size :62.5% ; 
/*    tuong ung voi 1rem =  10px*/
    height : 100%;
    min-height : 100%;
        background-color :  #9dd2ea;
    background: linear-gradient(#9dd2ea, #8bceec);
}
#wrapper {
	width: 96%;	
	max-width: 920px;
	margin: auto;
	padding: 2%;
    background-color :  #9dd2ea;
    background: linear-gradient(#9dd2ea, #8bceec);
    border-radius: 3px;
/*    box-shadow: 0px 4px #009de4, 0px 10px 15px rgba(0, 0, 0, 0.2);*/
    font-size : 1.6rem;
    padding-bottom: 100%;
	} 


/*phan screen khung dap so */
.screen-wrapper{
    width : 100%;
    min-height : 5rem;
    margin-bottom : 2%;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.2);
/*
    	border-radius: 3px;
	box-shadow: inset 0px 4px rgba(0, 0, 0, 0.2);
*/
}
			
    .answer-screen{
    width : 100%;
    float : left;
    min-height : 10rem;
    overflow: auto;
/*    background: rgba(0, 0, 0, 0.2);*/

    
    	/* Typography */
	font-size: 3.7rem;
	line-height: 4rem;
	color: white;
	text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
	text-align: right;
	letter-spacing: 1px;
    }

    .answered-screen{
        width : 100%;
        height :10rem;
        float : left;
/*        overflow-y : scroll;*/
        overflow : auto;
    }
/*tao phim */
    .keys-wrapper{
        width : 100%;
        float : left;
        margin-top : 5%;
        transition : all 0.5 ease;
    }
    .keys span{
        position : relative;
        float : left;
        cursor: pointer;
        width : 22%;
        min-height :1.6rem; 
        background : white;
        border-radius : 3%;
        overflow : hidden;
        box-shadow: 0px 4px rgba(0, 0, 0, 0.2);
        margin: 0 7px 11px 0;
        color: #888;
	   text-align: center;
        user-select : none;
        transition: all 0.2s ease;
        font-size : 5.1rem;

    }

    .keys span:hover{
  	
	box-shadow: 0px 0px #6b54d3;
	color: white;
    top : 4px;  
    background-color : #A493F7;
    }


    .count{
/*        //hien so dem */
        border : 1px solid white;
        text-align: left;
        color : white;
        font-weight: lighter;
        position : absolute;
        left : 1%;
    }
.answered{
width: 100%;
float: left;
min-height: 20px;
background: none repeat scroll 0% 0% rgba(0, 0, 0, 0.2);
/*border-radius: 3px;*/
/*box-shadow: 0px 4px rgba(0, 0, 0, 0.2) inset;*/
/*overflow-x: scroll;*/
overflow : auto;
font-size: 1.2rem;
color: #FFF;
text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
text-align: right;
letter-spacing: 1px;
position: relative;

}
/*style cho phim chuc nang */
.top-buttons{
    margin : 0 auto;
}
     .clear{
